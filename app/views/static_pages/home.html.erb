    // })
    
    
    // new Vue({
	   // template: '<p>{{msg}}</p>',
    //   data:{ msg: 'hello,world!'}
    // }).$mount('#app')
    </script>
  
  
  
    <h1>TwiTask</h1>

    <h2>
      タスクを管理し、友達と情報を共有しよう
    </h2>

    <%= link_to "アカウントを作成", new_user_path, class: "btn btn-lg btn-primary" %>
  </div>

  <%= link_to image_tag("rails.png", alt: "Rails logo"),
              'http://rubyonrails.org/' %>
<% end %>